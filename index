# Install Laravel via Composer
composer create-project --prefer-dist laravel/laravel portfolio

# Navigate to the project directory
cd portfolio

# Set up environment variables
cp .env.example .env
php artisan key:generate

# Install dependencies
composer install
npm install && npm run dev

# Create a Controller for portfolio pages
php artisan make:controller PortfolioController

# Define routes in web.php
echo "\nRoute::get('/', [PortfolioController::class, 'index']);" >> routes/web.php

# Create a basic Blade template
mkdir -p resources/views
cat <<EOL > resources/views/welcome.blade.php
<!DOCTYPE html>
<html>
<head>
    <title>My Portfolio</title>
    <link rel='stylesheet' href='{{ asset("css/app.css") }}'>
</head>
<body>
    <h1>Welcome to My Portfolio</h1>
    <ul>
        <li><a href='https://www.pepnco.com.sg/'>Pepnco</a></li>
        <li><a href='https://htadvertising.com.sg/product/transparent-lcd-glass-showcase'>HT Advertising</a></li>
        <li><a href='https://uat.lovr23.pepnco.com.sg/'>LOVR 23</a></li>
        <li><a href='https://www.bestshot.sg/'>BestShot</a></li>
    </ul>
</body>
</html>
EOL

# Add content to PortfolioController
cat <<EOL > app/Http/Controllers/PortfolioController.php
<?php

namespace App\Http\Controllers;

use Illuminate\Http\Request;

class PortfolioController extends Controller
{
    public function index()
    {
        return view('welcome');
    }
}
